@using PRN221_Project_ShopOnline.Models

@{
    //Get data from ViewBag
    List<Category> categories = (List<Category>)ViewBag.Categories;
    List<Product> products = (List<Product>)ViewBag.Products;
    int selectedCategory = ViewBag.SelectedCategory;
}

<!DOCTYPE html>
<html>
<head>
    <title>Computer ERA</title>
    <!--Favicon-->
    <link rel="icon" type="image/png" href="/image/faviconLogo.png" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--Font awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <!--Custom Style-->
    <link rel="stylesheet" href="~/css/Index.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <!--Menu-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <!--Logo-->
                    <a class="navbar-brand" href="/">
                        <img src="/image/Other/Logo.jpg" id="logo">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <!--Cart-->
                                <a class="btn btn-info" href="show">
                                    <i class="fa fa-shopping-cart"></i> Cart
                                    <span class="badge bg-secondary" id="CartNum">5</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <!--Login-->
                                <a class="nav-link" href="#">Login</a>
                            </li>
                        </ul>
                        <!--Search-->
                        @using (Html.BeginForm("SearchProductByName", "Default", FormMethod.Post))
                        {
                            <input class="form-control me-2" type="search" placeholder="Search" 
                                   aria-label="Search" name="ProductName" id="searchBar">
                            <button class="btn btn-outline-success" type="submit" id="searchButton">Search</button>
                        }
                    </div>
                </div>
            </nav>
        </div>
        <br />

        <div class="row">
            <section class="jumbotron text-center" style="background-color: white;">
                <div class="container">
                    <h1 class="jumbotron-heading"><img src="/image/MainLogo.png" alt="Main Logo" width="60%" /></h1>
                    <p class="lead text-muted mb-0">Điện thoại, Tablet, Laptop, Phụ kiện chính hãng giá tốt...</p>
                </div>
            </section>
        </div>
        <br />

        <div class="row">
            <!--Category-->
            <div class="col-3">
                <div class="card bg-light mb-3">
                    <div class="card-header bg-info text-white text-uppercase"><i class="fa fa-list"></i> Categories</div>
                    <ul class="list-group category_block" style="list-style-type:none">
                        @foreach (Category category in categories)
                        {
                            <li>
                                @* display differently if category is selected *@
                                <a class="list-group-item @(category.CategoryId == selectedCategory ? "active" : "")"
                                   href="/Default/FindProductByCategory/@category.CategoryId">
                                    <i class="@category.Icon"></i> @category.CategoryName
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!--Products-->
            <div class="col-sm-9">
                <div class="row">
                    @foreach (Product product in products)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card" style="width: 18rem;">
                                <a href="productDetail?ProductID=@product.ProductId">
                                    <img src="/image/@product.ImageLink" class="card-img-top" alt="...">
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="productDetail?ProductID=@product.ProductId" title="View Product">@product.ProductName</a>
                                    </h5>
                                    <p class="card-text">@product.GetPriceWithDot()</p>
                                    <a href="#" class="btn btn-primary">Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
