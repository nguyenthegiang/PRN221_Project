@using PRN221_Project_ShopOnline.Models

@* for Session *@
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@{
    //get data from ViewBag
    Product product = (Product)ViewBag.Product;
}


<!DOCTYPE html>
<html>
<head>
    <title>Computer ERA</title>
    <!--Favicon-->
    <link rel="icon" type="image/png" href="/image/faviconLogo.png" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--Font awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom Style-->
    <link rel="stylesheet" href="~/css/ProductDetail.css" />
</head>
<body>
    <!--Menu-->
    @Html.Partial("MenuBarWithSearch")

    <div class="container">

        <div class="row">
            <div class="container">
                <div class="card">
                    <div class="row">
                        <aside class="col-sm-5 border-right">
                            <article class="gallery-wrap">
                                <div class="img-big-wrap">
                                    <div> <a href="#"><img src="/image/@product.ImageLink"></a></div>
                                </div> <!-- slider-product.// -->
                                <div class="img-small-wrap">
                                </div> <!-- slider-nav.// -->
                            </article> <!-- gallery-wrap .end// -->
                        </aside>
                        <aside class="col-sm-7">
                            <article class="card-body p-5">
                                <h3 class="title mb-3">@product.ProductName</h3>

                                <p class="price-detail-wrap">
                                    <span class="price h3 text-warning">
                                        <span class="currency">VND </span><span class="num">@product.GetPriceWithDot()</span>
                                    </span>
                                </p> <!-- price-detail-wrap .// -->
                                <dl class="item-property">
                                    <dt>Description</dt>
                                    <dd>
                                        <p>
                                            @product.Description
                                        </p>
                                    </dd>
                                </dl>

                                <hr>

                                <!--Add Many To Cart-->
                                <form action="/Cart/AddManyToCart" method="post">
                                    <!--ProductId (for add to cart)-->
                                    <input type="hidden" name="ProductId" value="@product.ProductId"/>
                                    <div class="row">
                                        <div class="col-sm-5">
                                            <dl class="param param-inline">
                                                <dt>Quantity: </dt>
                                                <dd>
                                                    <!--Amount-->
                                                    <select name="Amount" class="form-select" style="width:70px;" id="select_id">
                                                        @for (int i = 1; i <= 10; i++)
                                                        {
                                                            <option value="@i"> @i </option>
                                                        }
                                                    </select>
                                                </dd>
                                            </dl>  <!-- item-property .// -->
                                        </div> <!-- col.// -->
                                    </div> <!-- row.// -->
                                    <hr>
                                    <button type="submit" class="btn btn-lg btn-outline-info text-uppercase">
                                        <i class="fas fa-shopping-cart"></i> Add to cart
                                    </button>
                                </form>

                            </article> <!-- card-body.// -->
                        </aside> <!-- col.// -->
                    </div> <!-- row.// -->
                </div> <!-- card.// -->
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
